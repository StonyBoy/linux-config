[color]
        diff = auto
        status = auto
        branch = auto
        interactive = auto

[diff]
        renames = copy

[clean]
        requireForce = true

[gc]
        auto = 0
        autopacklimit = 0
        packrefs = false

[apply]
        whitespace = strip

[alias]
        ci = commit
        co = checkout
        st = status
        stat = status

[core]
        excludesfile = ~/.gitignore

[push]
        default = simple

[include]
        path = ~/.gitconfig.d/10-work.gitconfig
        path = ~/.gitconfig.d/20-user.gitconfig
        path = ~/.gitconfig.d/30-home-user.gitconfig
        path = ~/.gitconfig.d/30-work-user.gitconfig
        path = ~/.gitconfig.d/40-macos.gitconfig

[sendemail]
	aliasesfile = ~/.mutt/aliases
	aliasfiletype = mutt
