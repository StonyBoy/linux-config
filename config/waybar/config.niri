{
    "height": 32,
    "spacing": 4,
    "layer": "top",
    "modules-left": ["niri/workspaces"],
    "modules-center": ["niri/window"],
    "modules-right": ["custom/media", "pulseaudio", "network#wan", "network#wifi", "network#tun", "cpu", "memory", "disk#sys", "disk#home", "temperature", "custom/hostinfo", "custom/easytest", "custom/davmail", "custom/mailstatus", "custom/systemd_unit", "custom/multi_clock", "tray"],
    "niri/workspaces": {
        "format": "{index}: {name} {icon}",
        "format-icons": {
            "Editor": "ÔÖú",
            "Music": "ÔÖÑ",
            "Internet": "Ôâ©",
            "Files": "ÔÅº",
            "Email": "ÔÉ†",

            // Icons by state
            "default": "ÔÑë"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%Y-%m-%d %H:%M:%S %Z} ÔÄó",
        "format-alt": "{:%H:%M:%S %z}",
        "locale": "en_DK.UTF-8",
        "timezones": ["Europe/Copenhagen", "America/New_York", "America/Phoenix", "Asia/Calcutta"],
        "on-click-right": "yad --calendar --width=200 --height=200 --undecorated --fixed --close-on-unfocus --no-buttons"
    },
    "cpu": {
        "interval": 10,
        "format": "{usage}% Ôãõ"
    },
    "memory": {
        "interval": 30,
        "format": "{used:0.1f}G/{total:0.1f}G Ôâπ"
    },
    "disk#sys": {
        "path": "/",
        "interval": 30,
        "format": "ÔÜª {percentage_free}% ÔáÄ",
        "format-alt": "{path}: {specific_free:0.2f}/{specific_total:0.2f}GB available ÔáÄ",
        "unit": "GB"
    },
    "disk#home": {
        "path": "/home",
        "interval": 30,
        "format": "ÔÄï {percentage_free}% ÔáÄ",
        "format-alt": "{path}: {specific_free:0.2f}/{specific_total:0.2f}GB available ÔáÄ",
        "unit": "GB"
    },
    "temperature": {
        "thermal-zone": 0,
        "critical-threshold": 75,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "network#wan": {
        "interface": "wan",
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} ÔÉ®",
        "tooltip-format": "{ifname}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "network#wifi": {
        "interface": "wifi",
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôá´",
        "tooltip-format": "{ifname}",

        "format-disconnected": "",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "network#tun": {
        "interface": "cscotun0",
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} ÔÄò",
        "tooltip-format": "{ifname}",
        "format-linked": "",
        "format-disconnected": "",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "$HOME/.config/waybar/pulse_audio_toggle.sh",
        "on-click-right": "pavucontrol"
    },
    "custom/media": {
        "return-type": "json",
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "tooltip-format": "{}",
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null",
        "on-click": "playerctl -p spotify play-pause"
    },
    "custom/hostinfo": {
        "interval": 60,
        "format": "{} ÔÑà",
        "exec": "$HOME/.config/waybar/hostinfo.py",
        "return-type": "json"
    },
    "custom/easytest": {
        "interval": 30,
        "exec": "$HOME/.config/waybar/easytest.py $USER",
        "return-type": "json"
    },
    "custom/davmail": {
        "interval": 900,
        "exec": "$HOME/.config/waybar/davmail.py --logpath $HOME/davmail.log",
        "return-type": "json"
    },
    "custom/mailstatus": {
        "interval": 900,
        "exec": "$HOME/.config/waybar/mailstatus.py --maildir ~/.local/share/mail/microchip/Inbox ~/.local/share/mail/microchip/unglinuxdriver_list",
        "return-type": "json"
    },
    "custom/systemd_unit": {
        "interval": 60,
        "format": "{} ÔÇÆ",
        "exec": "$HOME/.config/waybar/systemd_unit.py --system cbdaemon.service cbebpfdaemon.service cbagentd.service taniumclient.service docker.service --user davmail.service mbsync.timer sway_lockscreen.service swaybg.service swayidle.service niri_lockscreen.service niribg.service niriidle.service",
        "return-type": "json"
    },
    "custom/multi_clock": {
        "interval": 10,
        "format": "{} ÔÄó",
        "exec": "$HOME/.config/waybar/multi_clock.py --zone America/New_York America/Phoenix Asia/Calcutta --name NY PHO HYD",
        "on-click-right": "yad --calendar --width=200 --height=200 --undecorated --fixed --close-on-unfocus --no-buttons --show-weeks",
        "return-type": "json"
    },
    "mpris": {
        "format": "{player_icon} {artist} - {title}",
        "format-paused": "{status_icon} {title}",
        "player-icons": {
            "default": "‚ñ∂",
            "spotify": "ÔÜº",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "ignored-players": ["firefox"]
    }
}

