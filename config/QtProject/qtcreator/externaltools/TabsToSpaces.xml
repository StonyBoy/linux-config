<externaltool id="TabsToSpaces">
    <description>Replace 1 TAB with 4 spaces in the selected text, only initial</description>
    <displayname>TabsToSpaces</displayname>
    <category>Text</category>
    <executable output="replaceselection" error="ignore" modifiesdocument="yes">
        <path>expand</path>
        <arguments>-t 4 -i</arguments>
        <input>%{CurrentDocument:Selection}</input>
        <workingdirectory>%{CurrentDocument:Path}</workingdirectory>
    </executable>
</externaltool>
