URxvt.font:            xft:DejaVu Sans Mono for Powerline:antialias=true:size=11
URxvt.boldFont:        xft:DejaVu Sans Mono for Powerline:bold:antialias=true:size=11
URxvt.italicFont:      xft:DejaVu Sans Mono for Powerline:italic:antialias=true:size=11
URxvt.boldItalicFont:  xft:DejaVu Sans Mono for Powerline:bold:italic:antialias=true:size=11

! Stay focused on a particular part of scrollback buffer when scrolled up from the bottom
! URxvt-unicode terminal: do not scroll with output
URxvt*scrollTtyOutput: false
! URxvt-unicode terminal: scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! URxvt-unicode terminalscroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
URxvt.scrollBar:        false

! URxvt-unicode terminal: disable the scrollback buffer for the secondary screen
! URxvt.secondaryScreen: 1
! URxvt.secondaryScroll: 0

! URxvt-unicode terminal: By default the distance between characters can feel too wide.
! The spacing can be reduced by one pixel as such:
URxvt.letterSpace: -1

! URxvt.scrollbar_right: true

URxvt.underlineColor:   yellow
URxvt.saveLines:        100000

URxvt.visualBell:       true
URxvt.loginShell:       true
URxvt.depth:            32

URxvt.keysym.Shift-Up:   command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! Discard scroll buffer history
URxvt.keysym.C-k:        \ echo -ne '\\033c'\n

! ! keyboard-select
! URxvt.perl-ext-common:      default,clipboard,url-select,keyboard-select
! URxvt.url-select.launcher:  chromium
! URxvt.url-select.underline: true
! ! URxvt.keysym.M-u:           perl:url-select:select_next
! URxvt.keysym.M-s: perl:keyboard-select:activate
! URxvt.keysym.M-r: perl:keyboard-select:search
! 
! 
! ! clipboard
! ! update clipboard whenever primary gets updated
! URxvt.clipboard.autocopy: true
! URxvt.keysym.M-c: perl:clipboard:copy
! URxvt.keysym.M-v: perl:clipboard:paste
! URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
! 
! ! `font-size` plugin
! URxvt.keysym.C-minus: perl:font-size:decrease
! URxvt.keysym.C-equal: perl:font-size:increase
! ! The default font increase step size is 1. This is for portability across all
! ! fonts (some fonts do not support particular font sizes). Because changing font
! ! size only really makes sense for anti-aliased fonts (Terminus is bitmapped),
! ! and because anti-aliased fonts support any size, it makes sense to just use a
! ! size step of 4 for faster transitions between font size changes.
! URxvt.font-size.step: 4

