! Steen Hegelund
! 14-dec-2017

URxvt.font:            xft:Droid Sans Mono:antialias=true:size=10
URxvt.boldFont:        xft:Droid Sans Mono:bold:antialias=true:size=10
URxvt.italicFont:      xft:Droid Sans Mono:italic:antialias=true:size=10
URxvt.boldItalicFont:  xft:Droid Sans Mono:bold:italic:antialias=true:size=10

! Perl Extensions to urxvt
URxvt.perl-ext-common:      default,clipboard,font-size

! Stay focused on a particular part of scrollback buffer when scrolled up from the bottom
! URxvt-unicode terminal: do not scroll with output
URxvt*scrollTtyOutput: false
! URxvt-unicode terminal: scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! URxvt-unicode terminalscroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
URxvt.scrollBar:        false

! URxvt-unicode terminal: disable the scrollback buffer for the secondary screen
! URxvt.secondaryScreen: 1
! URxvt.secondaryScroll: 0

! URxvt-unicode terminal: By default the distance between characters can feel too wide.
! The spacing can be reduced by one pixel as such:
URxvt.letterSpace: -1

! URxvt.scrollbar_right: true

URxvt.underlineColor:   yellow
URxvt.saveLines:        100000

URxvt.visualBell:       true
URxvt.loginShell:       true
URxvt.depth:            32

URxvt.keysym.Shift-Up:   command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! Discard scroll buffer history
URxvt.keysym.C-G:        \ echo -ne '\\033c'\n

! clipboard
! update clipboard whenever primary gets updated
URxvt.clipboard.autocopy: true
! Use ctrl+shift+c and ctrl+shift-v as copy/paste shortcuts
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.C-C: perl:clipboard:copy
URxvt.keysym.C-V: perl:clipboard:paste
URxvt.keysym.C-A-V: perl:clipboard:paste_escaped

! Font size
URxvt.keysym.C-plus:      font-size:increase
URxvt.keysym.C-minus:     font-size:decrease
URxvt.keysym.C-S-plus:    font-size:incglobal
URxvt.keysym.C-S-minus:   font-size:decglobal
URxvt.keysym.C-equal:     font-size:reset
URxvt.keysym.C-question:  font-size:show
URxvt.font-size.step:     1

